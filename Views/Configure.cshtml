@model Nop.Plugin.Shipping.DHL.Models.DHLShippingModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="DHLShipping" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3" style="padding:10px;">
                        <nop-label asp-for="UseSandbox" />
                    </div>
                    <div class="col-md-9" style="padding: 10px;">
                        <nop-editor asp-for="UseSandbox" />
                        <span asp-validation-for="UseSandbox"></span>
                    </div>
                    <div class="col-md-3" style="padding: 10px;">
                        <nop-label asp-for="UserId" />
                    </div>
                    <div class="col-md-9" style="padding:10px;">
                        <nop-editor asp-for="UserId" />
                        <span asp-validation-for="UserId"></span>
                    </div>
                    <div class="col-md-3" style="padding:10px;">
                        <nop-label asp-for="Key" />
                    </div>
                    <div class="col-md-9" style="padding:10px;">
                        <nop-editor asp-for="Key" />
                        <span asp-validation-for="Key"></span>
                    </div>
                    <div class="col-md-3" style="padding:10px;">
                        <nop-label asp-for="AccountNumber" />
                    </div>
                    <div class="col-md-9" style="padding:10px;">
                        <nop-editor asp-for="AccountNumber" />
                        <span asp-validation-for="AccountNumber"></span>
                    </div>
                    <div class="col-md-3" style="padding:10px;">
                        <nop-label asp-for="LocationFinderKey" />
                    </div>
                    <div class="col-md-9" style="padding:10px;">
                        <nop-editor asp-for="LocationFinderKey" />
                        <span asp-validation-for="LocationFinderKey"></span>
                    </div>
                    <div class="col-md-3" style="padding:10px;">
                        <nop-label asp-for="ApiUrl" />
                    </div>
                    <div class="col-md-9" style="padding:10px;">
                        <nop-editor asp-for="ApiUrl" />
                        <span asp-validation-for="ApiUrl"></span>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9 col-md-offset-3">
                            <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
